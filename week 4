<body>
    <h1>Story Generator</h1>
    <div>
        <label for="customname">Enter a name:</label>
        <input id="customname" type="text" placeholder="Your name">
    </div>
    <div>
        <label>Unit system:</label>
        <div class="radio-group">
            <div>
                <input id="us" type="radio" name="ukus" value="us" checked>
                <label for="us">US (Fahrenheit, pounds)</label>
            </div>
            <div>
                <input id="uk" type="radio" name="ukus" value="uk">
                <label for="uk">UK (Celsius, stone)</label>
            </div>
        </div>
    </div>
    <div>
        <button class="randomize">Generate Story</button>
    </div>
    <p class="story"></p>

    <script>
        // Get DOM elements
        const customName = document.getElementById('customname');
        const randomize = document.querySelector('.randomize');
        const story = document.querySelector('.story');
        
        // Story templates
        const storyTemplates = [
            "On a :inserttemp: day, :insertx: decided to visit :inserty:. To everyone's surprise, they :insertz:. :name: witnessed it all and later said, 'I knew this would happen!'",
            ":insertx: was enjoying a :inserttemp: afternoon at :inserty: when suddenly, they :insertz:. :name: couldn't believe their eyes!",
            "When the temperature reached :inserttemp:, :insertx: thought it would be perfect to go to :inserty:. Little did they know they would :insertz:. :name: was there to see it all unfold."
        ];
        
        const insertX = ['the friendly neighbor', 'a curious scientist', 'an adventurous traveler', 'a talented musician'];
        const insertY = ['the local park', 'a cozy café', 'the city library', 'a beautiful garden'];
        const insertZ = [
            'discovered a hidden talent for painting',
            'made friends with a group of squirrels',
            'started telling the most fascinating stories',
            'organized an impromptu concert',
            'solved a mystery that puzzled everyone'
        ];
        
        // Random selection function
        function randomValueFromArray(array) {
            return array[Math.floor(Math.random() * array.length)];
        }
        
        // Generate story function
        function generateStory() {
            // Select a random template
            let selectedTemplate = randomValueFromArray(storyTemplates);
            let newStory = selectedTemplate;
            
            // Get temperature based on unit system
            let temperature, tempText;
            if (document.getElementById('uk').checked) {
                temperature = Math.floor(Math.random() * 15) + 20; // 20-35°C
                tempText = temperature + '°C';
            } else {
                temperature = Math.floor(Math.random() * 30) + 68; // 68-98°F
                tempText = temperature + '°F';
            }
            
            // Insert random values
            newStory = newStory.replace(':insertx:', randomValueFromArray(insertX));
            newStory = newStory.replace(':inserty:', randomValueFromArray(insertY));
            newStory = newStory.replace(':insertz:', randomValueFromArray(insertZ));
            newStory = newStory.replace(':inserttemp:', tempText);
            
            // Custom name
            const name = customName.value || 'Alex';
            newStory = newStory.replace(':name:', name);
            
            // Display story
            story.textContent = newStory;
            story.style.visibility = 'visible';
        }
        
        // Event listener
        randomize.addEventListener('click', generateStory);
    </script>
</body>
</html>
