    <title>Story Generator</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            width: 500px;
            margin: 0 auto;
            padding: 30px;
            background-color: #f5f7fa;
        }
        label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }
        div {
            padding-bottom: 20px;
        }
        input[type="text"] {
            padding: 8px;
            width: 200px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
        .radio-group {
            display: flex;
            gap: 15px;
            margin-top: 5px;
        }
        button {
            background-color: #6e8efb;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s;
        }
        button:hover {
            background-color: #5a7df4;
        }
        .story {
            background: #e8f4ff;
            color: #333;
            padding: 20px;
            border-radius: 8px;
            margin-top: 20px;
            line-height: 1.6;
            visibility: hidden;
            border-left: 4px solid #6e8efb;
        }
        h1 {
            color: #333;
            text-align: center;
            margin-bottom: 30px;
        }
    </style>
